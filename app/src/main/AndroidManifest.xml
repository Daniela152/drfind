<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drfind"
    android:versionCode="1001" android:versionName="1.0"
    >
    <supports-screens android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Vista.Splash"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Vista.administrador" />
        <activity
            android:name=".Vista.paciente.menupaciente"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            />
        <activity
            android:name=".Vista.medico.menumedico"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".Vista.medico.regismedico"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".Vista.paciente.regispaciente"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".Vista.paciente.loginpac"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".Vista.medico.loginmed"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".Vista.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>