                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorTitulos"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/txtcolegiaturamed"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="NÂ° Colegiatura:"
                    android:textColor="@color/colorTitulos"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtcolegiamed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/coloriconos"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/colorTitulos"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/txttelefonomed"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="Telefono:"
                    android:textColor="@color/colorTitulos"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edttelefonomed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/coloriconos"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/colorTitulos"
                    android:textSize="14sp"
                    android:maxLength="9"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/txtnacimientomed"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="Fecha de Nacimiento:"
                    android:textColor="@color/colorTitulos"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtnacimed"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/coloriconos"
                    android:ems="10"
                    android:inputType="date"
                    android:textAlignment="center"
                    android:textColor="@color/colorTitulos"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnfechamedico"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_today_black_24dp"
                    android:backgroundTint="@color/coloriconos"
                    android:foregroundTint="@color/coloriconos"
                    android:shadowColor="@color/coloriconos"
                    android:textColor="@color/colorTitulos"
                    android:textColorHighlight="@color/coloriconos"
                    android:textColorHint="@color/coloriconos"
                    android:textColorLink="@color/coloriconos"
                    android:textCursorDrawable="@drawable/ic_today_black_24dp" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/btnsiguiente"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:background="@drawable/ovalo"
                android:fontFamily="@font/coming_soon"
                android:text="Siguiente"
                android:textColor="@color/colorletrasbotones"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="20dp">
            </Space>
            <Button
                android:id="@+id/btncanregismedico"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:background="@drawable/ovalo"
                android:fontFamily="@font/coming_soon"
                android:text="Cancelar"
                android:textColor="@color/colorletrasbotones"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>
        </LinearLayout>
