<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.medico.loginmed">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fondototal"
        android:adjustViewBounds="true">
    </ImageView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="150dp">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_logotipo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:fontFamily="@font/coming_soon"
            android:text="usuario:"
            android:textColor="@color/colorTitulos"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="15dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/edtusuariomed"
        android:layout_width="348dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:backgroundTint="@color/coloriconos"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorTitulos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:fontFamily="@font/coming_soon"
            android:text="contraseÃ±a:"
            android:textColor="@color/colorTitulos"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="15dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/edtpassmedico"
        android:layout_width="348dp"
        android:layout_height="57dp"
        android:backgroundTint="@color/coloriconos"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:textColor="@color/colorTitulos"
        />
    <CheckBox
        android:id="@+id/checkBoxusermed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:buttonTint="@color/coloriconos"
        android:text="Guardar datos"
        android:textColor="@color/colorTitulos" />
    <Button
        android:id="@+id/btnloginmed"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/ovalo"
        android:fontFamily="@font/coming_soon"
        android:text="Iniciar Sesion"
        android:textAlignment="center"
        android:textColor="@color/colorletrasbotones"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnregismed"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/ovalo"
        android:fontFamily="@font/coming_soon"
        android:text="Registrarse"
        android:textAlignment="center"
        android:textColor="@color/colorletrasbotones"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>

</RelativeLayout>
</ScrollView>