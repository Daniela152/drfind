<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.paciente.regispaciente">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fondototal"
        android:adjustViewBounds="true">
    </ImageView>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="130dp">

        <TextView
            android:id="@+id/txtregispac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/coming_soon"
            android:text="Registro Paciente"
            android:textAlignment="center"
            android:textColor="@color/colorTitulos"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txtusuapac"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coming_soon"
                android:text="Usuario:"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtusuapac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/coloriconos"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txtcontrapac"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coming_soon"
                android:text="ContraseÃ±a:"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtcontrapac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/coloriconos"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txtcontraconfipac"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coming_soon"
                android:text="Confirmar:"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtcontraconfipac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/coloriconos"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txtnompac"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coming_soon"
                android:text="Nombre:"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtnompac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/coloriconos"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txtappac"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coming_soon"
                android:text="Apellido Paterno:"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtappac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/coloriconos"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txtampac"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coming_soon"
                android:text="Apellido Materno:"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtampac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/coloriconos"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txtdireccionpac"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coming_soon"
                android:text="Direccion:"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtdireccionpac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/coloriconos"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txtemailpac"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coming_soon"
                android:text="E_mail:"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtemailpac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/coloriconos"
                android:ems="10"
                android:inputType="textWebEmailAddress"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txttelefonopac"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coming_soon"
                android:text="Telefono:"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edttelefonopac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/coloriconos"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp"
                android:maxLength="9"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txtnacimientopac"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coming_soon"
                android:text="Fecha de Nacimiento:"
                android:textColor="@color/colorTitulos"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtnacimientopac"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/coloriconos"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/colorTitulos"
                android:textColorHighlight="@color/colorTitulos"
                android:textColorHint="@color/colorTitulos"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnfechapaciente"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_today_black_24dp"
                android:backgroundTint="@color/coloriconos"
                android:foregroundTint="@color/coloriconos"
                android:shadowColor="@color/coloriconos"
                android:textColor="@color/coloriconos"
                android:textColorHighlight="@color/colorTitulos"
                android:textColorHint="@color/coloriconos"
                android:textColorLink="@color/coloriconos"
                android:textCursorDrawable="@drawable/ic_today_black_24dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_margin="10dp">

        <Button
            android:id="@+id/btnregistrarpaciente"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:background="@drawable/ovalo"
            android:fontFamily="@font/coming_soon"
            android:text="Registrar"
            android:textColor="@color/colorletrasbotones"
            android:textSize="14sp"
            android:textStyle="bold"/>
<Space
    android:layout_width="20dp"
    android:layout_height="20dp">

</Space>
        <Button
            android:id="@+id/btncanregispaciente"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:background="@drawable/ovalo"
            android:fontFamily="@font/coming_soon"
            android:text="Cancelar"
            android:textColor="@color/colorletrasbotones"
            android:textSize="14sp"
            android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>